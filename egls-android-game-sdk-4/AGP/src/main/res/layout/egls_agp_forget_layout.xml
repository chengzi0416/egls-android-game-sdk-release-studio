<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/egls_agp_dp_320"
        android:layout_height="@dimen/egls_agp_dp_220"
        android:background="@drawable/kr_116"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include layout="@layout/egls_agp_login_head_merge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/egls_agp_dp_28"
            android:text="@string/egls_agp_forget_text_1"
            android:textColor="#ff6600"
            android:textSize="@dimen/egls_agp_sp_12" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/egls_agp_dp_32"
            android:layout_marginLeft="@dimen/egls_agp_dp_24"
            android:layout_marginRight="@dimen/egls_agp_dp_24"
            android:layout_marginTop="@dimen/egls_agp_dp_4"
            android:scrollbars="none" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/egls_agp_forget_text_2"
                android:textColor="#999999"
                android:textSize="@dimen/egls_agp_sp_10" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_forget_email"
                android:layout_width="@dimen/egls_agp_dp_240"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:background="@drawable/egls_agp_kr_103_2_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/egls_agp_dp_12"
                android:paddingRight="@dimen/egls_agp_dp_12" >

                <ImageView
                    android:layout_width="@dimen/egls_agp_dp_16"
                    android:layout_height="@dimen/egls_agp_dp_16"
                    android:background="@drawable/kr_37" />

                <com.egls.platform.views.AGPAutoScaleMinSizeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/egls_agp_dp_4"
                    android:background="@null"
                    android:contentDescription="egls_agp_sp_10"
                    android:text="@string/egls_agp_forget_text_3"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/egls_agp_sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forget_mobile"
                android:layout_width="@dimen/egls_agp_dp_240"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:layout_marginTop="@dimen/egls_agp_dp_6"
                android:background="@drawable/egls_agp_kr_103_2_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/egls_agp_dp_12"
                android:paddingRight="@dimen/egls_agp_dp_12"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/egls_agp_dp_16"
                    android:layout_height="@dimen/egls_agp_dp_16"
                    android:background="@drawable/kr_36" />

                <com.egls.platform.views.AGPAutoScaleMinSizeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/egls_agp_dp_4"
                    android:background="@null"
                    android:contentDescription="egls_agp_sp_10"
                    android:text="@string/egls_agp_forget_text_5"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/egls_agp_sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forget_customer"
                android:layout_width="@dimen/egls_agp_dp_240"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:layout_marginTop="@dimen/egls_agp_dp_6"
                android:background="@drawable/egls_agp_kr_103_2_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/egls_agp_dp_12"
                android:paddingRight="@dimen/egls_agp_dp_12"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/egls_agp_dp_16"
                    android:layout_height="@dimen/egls_agp_dp_16"
                    android:background="@drawable/kr_38" />

                <com.egls.platform.views.AGPAutoScaleMinSizeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/egls_agp_dp_4"
                    android:background="@null"
                    android:contentDescription="egls_agp_sp_10"
                    android:text="@string/egls_agp_forget_text_4"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/egls_agp_sp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>