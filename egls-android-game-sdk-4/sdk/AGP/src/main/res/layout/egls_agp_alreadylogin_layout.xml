<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/egls_agp_dp_320"
        android:layout_height="@dimen/egls_agp_dp_220"
        android:background="@drawable/kr_116"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include layout="@layout/egls_agp_login_head_merge" />

        <RelativeLayout
            android:layout_width="@dimen/egls_agp_dp_320"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" >

            <!-- 已登录账号页面 -->

            <LinearLayout
                android:id="@+id/ll_alreadylogin_lastaccount"
                android:layout_width="@dimen/egls_agp_dp_320"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_alreadylogin_firstaccount"
                    android:layout_width="@dimen/egls_agp_dp_240"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/egls_agp_dp_32"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_alreadylogin_firsticon"
                        android:layout_width="@dimen/egls_agp_dp_48"
                        android:layout_height="@dimen/egls_agp_dp_48"
                        android:background="@android:color/transparent"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/kr_75" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/egls_agp_dp_4"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_alreadylogin_firstaccount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/egls_agp_dp_36"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/egls_agp_dp_2"
                            android:textColor="#999999"
                            android:textSize="@dimen/egls_agp_sp_10" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_alreadylogin_enter"
                    android:layout_width="@dimen/egls_agp_dp_240"
                    android:layout_height="@dimen/egls_agp_dp_28"
                    android:layout_marginTop="@dimen/egls_agp_dp_12"
                    android:background="@drawable/egls_agp_kr_103_2_selector"
                    android:text="@string/egls_agp_alreadylogin_text_1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/egls_agp_sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_alreadylogin_otheraccount"
                        style="@style/egls_agp_button_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/egls_agp_alreadylogin_text_2"
                        android:textColor="#666666"
                        android:textSize="@dimen/egls_agp_sp_10" />

                    <TextView
                        style="egls_agp_button_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/egls_agp_line"
                        android:textColor="#666666"
                        android:textSize="@dimen/egls_agp_sp_10" />

                    <Button
                        android:id="@+id/btn_alreadylogin_register"
                        style="@style/egls_agp_button_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/egls_agp_alreadylogin_text_3"
                        android:textColor="#666666"
                        android:textSize="@dimen/egls_agp_sp_10" />
                </LinearLayout>
            </LinearLayout>

            <!-- 其他账号页面 -->

            <LinearLayout
                android:id="@+id/ll_alreadylogin_otheraccount"
                android:layout_width="@dimen/egls_agp_dp_320"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/egls_agp_dp_48"
                    android:gravity="center"
                    android:text="@string/egls_agp_alreadylogin_text_4"
                    android:textColor="#999999"
                    android:textSize="@dimen/egls_agp_sp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/egls_agp_dp_48"
                    android:layout_marginLeft="@dimen/egls_agp_dp_24"
                    android:layout_marginRight="@dimen/egls_agp_dp_24"
                    android:background="@android:color/transparent"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/ll_alreadylogin_guest"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/egls_agp_dp_48"
                            android:layout_height="@dimen/egls_agp_dp_48"
                            android:background="@drawable/kr_76"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_alreadylogin_egls"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/egls_agp_dp_48"
                            android:layout_height="@dimen/egls_agp_dp_48"
                            android:background="@drawable/kr_75"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_alreadylogin_wechat"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/egls_agp_dp_48"
                            android:layout_height="@dimen/egls_agp_dp_48"
                            android:background="@drawable/kr_111"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_alreadylogin_googleplus"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/egls_agp_dp_48"
                            android:layout_height="@dimen/egls_agp_dp_48"
                            android:background="@drawable/kr_77_1"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_alreadylogin_facebook"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="@dimen/egls_agp_dp_48"
                            android:layout_height="@dimen/egls_agp_dp_48"
                            android:background="@drawable/kr_69"
                            android:contentDescription="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>