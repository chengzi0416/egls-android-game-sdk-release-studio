<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/egls_agp_dp_320"
        android:layout_height="@dimen/egls_agp_dp_220"
        android:background="@drawable/kr_116"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include layout="@layout/egls_agp_login_head_merge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/egls_agp_dp_28"
            android:text="@string/egls_agp_authentication_text_1"
            android:textColor="#ff6600"
            android:textSize="@dimen/egls_agp_sp_12" >
        </TextView>

        <LinearLayout
            android:layout_width="@dimen/egls_agp_dp_240"
            android:layout_height="@dimen/egls_agp_dp_32"
            android:layout_marginTop="@dimen/egls_agp_dp_4"
            android:background="@drawable/kr_115_1"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_authentication_realname"
                android:layout_width="@dimen/egls_agp_dp_180"
                android:layout_height="@dimen/egls_agp_dp_24"
                android:layout_marginTop="@dimen/egls_agp_dp_3"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="@string/egls_agp_authentication_hint_1"
                android:inputType="text"
                android:orientation="horizontal"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="@dimen/egls_agp_sp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/egls_agp_dp_240"
            android:layout_height="@dimen/egls_agp_dp_32"
            android:layout_marginTop="@dimen/egls_agp_dp_2"
            android:background="@drawable/kr_109_1"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_authentication_number"
                android:layout_width="@dimen/egls_agp_dp_180"
                android:layout_height="@dimen/egls_agp_dp_24"
                android:layout_marginTop="@dimen/egls_agp_dp_3"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:hint="@string/egls_agp_authentication_hint_2"
                android:inputType="text"
                android:orientation="horizontal"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="@dimen/egls_agp_sp_10" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_authentication_submit"
            android:layout_width="@dimen/egls_agp_dp_240"
            android:layout_height="@dimen/egls_agp_dp_28"
            android:layout_marginTop="@dimen/egls_agp_dp_24"
            android:background="@drawable/egls_agp_kr_103_2_selector"
            android:text="@string/egls_agp_authentication_text_2"
            android:textColor="#ffffff"
            android:textSize="@dimen/egls_agp_sp_12" />
    </LinearLayout>

</LinearLayout>