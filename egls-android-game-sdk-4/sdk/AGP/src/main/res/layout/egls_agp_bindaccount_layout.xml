<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/egls_agp_dp_320"
        android:layout_height="@dimen/egls_agp_dp_240"
        android:background="@drawable/kr_116_1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include layout="@layout/egls_agp_login_head_merge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/egls_agp_dp_28"
            android:text="@string/egls_agp_bindaccount_text_1"
            android:textColor="#ff6600"
            android:textSize="@dimen/egls_agp_sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/egls_agp_dp_24"
            android:layout_marginRight="@dimen/egls_agp_dp_24"
            android:layout_marginTop="@dimen/egls_agp_dp_8"
            android:gravity="center"
            android:text="@string/egls_agp_bindaccount_text_2"
            android:textColor="#999999"
            android:textSize="@dimen/egls_agp_sp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/egls_agp_dp_24"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_bindaccount_egls"
                android:layout_width="@dimen/egls_agp_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/egls_agp_dp_8"
                android:layout_marginRight="@dimen/egls_agp_dp_8"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ib_bindaccount_egls"
                    android:layout_width="@dimen/egls_agp_dp_48"
                    android:layout_height="@dimen/egls_agp_dp_48"
                    android:background="@drawable/kr_75"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bindaccount_wechat"
                android:layout_width="@dimen/egls_agp_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/egls_agp_dp_8"
                android:layout_marginRight="@dimen/egls_agp_dp_8"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageButton
                    android:id="@+id/ib_bindaccount_wechat"
                    android:layout_width="@dimen/egls_agp_dp_48"
                    android:layout_height="@dimen/egls_agp_dp_48"
                    android:background="@drawable/kr_111"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bindaccount_googleplus"
                android:layout_width="@dimen/egls_agp_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/egls_agp_dp_8"
                android:layout_marginRight="@dimen/egls_agp_dp_8"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageButton
                    android:id="@+id/ib_bindaccount_googleplus"
                    android:layout_width="@dimen/egls_agp_dp_48"
                    android:layout_height="@dimen/egls_agp_dp_48"
                    android:background="@drawable/kr_77_1"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bindaccount_facebook"
                android:layout_width="@dimen/egls_agp_dp_60"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/egls_agp_dp_8"
                android:layout_marginRight="@dimen/egls_agp_dp_8"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageButton
                    android:id="@+id/ib_bindaccount_facebook"
                    android:layout_width="@dimen/egls_agp_dp_48"
                    android:layout_height="@dimen/egls_agp_dp_48"
                    android:background="@drawable/kr_69"
                    android:contentDescription="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>