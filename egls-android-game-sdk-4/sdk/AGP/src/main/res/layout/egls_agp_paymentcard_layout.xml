<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/egls_agp_dp_320"
        android:layout_height="@dimen/egls_agp_dp_240"
        android:background="#e7e7e7"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/egls_agp_dp_32"
            android:background="#333333"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_paymentcard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/egls_agp_paymentcard_text_1"
                android:textColor="#fff"
                android:textSize="@dimen/egls_agp_sp_14" />

            <Button
                android:id="@+id/btn_paymentcard_return"
                android:layout_width="@dimen/egls_agp_dp_24"
                android:layout_height="@dimen/egls_agp_dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/egls_agp_dp_4"
                android:background="@drawable/kr_48" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/egls_agp_dp_12"
            android:layout_marginLeft="@dimen/egls_agp_dp_24"
            android:layout_marginRight="@dimen/egls_agp_dp_24"
            android:layout_marginTop="@dimen/egls_agp_dp_12"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_paymentcard_tip"
                style="@style/egls_agp_tip_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:gravity="center_vertical"
                android:padding="@dimen/egls_agp_dp_4"
                android:textColor="#E3820E"
                android:textSize="@dimen/egls_agp_sp_12" />

            <EditText
                android:id="@+id/et_paymentcard_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:layout_marginTop="@dimen/egls_agp_dp_4"
                android:background="@drawable/kr_04"
                android:gravity="center"
                android:hint="@string/egls_agp_paymentcard_hint_1"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/egls_agp_sp_12" />

            <EditText
                android:id="@+id/et_paymentcard_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/egls_agp_dp_28"
                android:layout_marginTop="@dimen/egls_agp_dp_4"
                android:background="@drawable/kr_04"
                android:gravity="center"
                android:hint="@string/egls_agp_paymentcard_hint_2"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/egls_agp_sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" >

                <Button
                    android:id="@+id/btn_paymentcard_submit"
                    style="@style/egls_agp_button_common"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/egls_agp_dp_32"
                    android:layout_alignParentBottom="true"
                    android:text="@string/egls_agp_paymentcard_text_3" />

                <TextView
                    style="@style/egls_agp_tip_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_paymentcard_submit"
                    android:padding="@dimen/egls_agp_dp_4"
                    android:text="@string/egls_agp_paymentcard_text_2"
                    android:textColor="#006666"
                    android:textSize="@dimen/egls_agp_sp_12" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>