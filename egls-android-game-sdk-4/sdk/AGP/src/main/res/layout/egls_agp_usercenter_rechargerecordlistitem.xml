<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/egls_agp_dp_40"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/egls_agp_dp_36"
        android:background="@android:color/transparent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_usercenter_rechargerecord_image"
            android:layout_width="@dimen/egls_agp_dp_36"
            android:layout_height="@dimen/egls_agp_dp_36"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="@dimen/egls_agp_dp_4"
            android:scaleType="fitXY"
            android:src="@drawable/xi_41"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_usercenter_rechargerecord_status"
            android:layout_width="@dimen/egls_agp_dp_36"
            android:layout_height="@dimen/egls_agp_dp_36"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="@dimen/egls_agp_dp_4"
            android:scaleType="fitXY"
            android:src="@drawable/xi_38" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/egls_agp_dp_36"
            android:layout_toLeftOf="@+id/iv_usercenter_rechargerecord_status"
            android:layout_toRightOf="@+id/iv_usercenter_rechargerecord_image"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_usercenter_rechargerecord_order"
                android:layout_width="0dp"
                android:layout_height="@dimen/egls_agp_dp_36"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#696969"
                android:textSize="@dimen/egls_agp_sp_10" />

            <TextView
                android:id="@+id/tv_usercenter_rechargerecord_cost"
                android:layout_width="0dp"
                android:layout_height="@dimen/egls_agp_dp_36"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#696969"
                android:textSize="@dimen/egls_agp_sp_10" />

            <TextView
                android:id="@+id/tv_usercenter_rechargerecord_date"
                android:layout_width="0dp"
                android:layout_height="@dimen/egls_agp_dp_36"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#696969"
                android:textSize="@dimen/egls_agp_sp_10" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/egls_agp_dp_4"
        android:background="@android:color/transparent" />

</LinearLayout>