<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="egls_agp_itemcell_horizontalseperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/egls_agp_always_dp_1</item>
        <item name="android:background">@color/egls_agp_color_black</item>
    </style>

    <style name="egls_agp_itemcell_verticalseperator">
        <item name="android:layout_width">@dimen/egls_agp_always_dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/egls_agp_color_black</item>
    </style>

    <style name="egls_agp_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/egls_agp_toastenter_anim</item>
        <item name="android:windowExitAnimation">@anim/egls_agp_toastexit_anim</item>
    </style>

    <style name="egls_agp_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="egls_agp_button_common">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/egls_agp_sp_14</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/egls_agp_button_common_selector</item>
    </style>

    <style name="egls_agp_button_text_black">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/egls_agp_sp_12</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/egls_agp_always_dp_2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="egls_agp_button_text_gray">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">@dimen/egls_agp_sp_12</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/egls_agp_always_dp_2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="egls_agp_tip_text">
        <item name="android:textColor">#9c9c9c</item>
        <item name="android:textSize">@dimen/egls_agp_sp_12</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/egls_agp_always_dp_2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AGPTheme.Translucent.NoTitleBar.Fullscreen.NoAnimation" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/AGSNoAnimation</item>
    </style>

    <style name="AGPNoAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

</resources>